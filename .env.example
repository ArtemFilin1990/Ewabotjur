# Порт, который будет слушать сервер (Amvera передаёт PORT автоматически)
PORT=3000

# Секрет Telegram webhook (используется в URL /webhook/telegram/:secret
# или как secret_token в Telegram setWebhook)
TELEGRAM_WEBHOOK_SECRET=replace_with_random_secret
# Токен Telegram бота для отправки ответов
TELEGRAM_BOT_TOKEN=replace_with_bot_token

# Настройки Bitrix24 локального приложения (используются в /bitrix/install)
BITRIX_CLIENT_ID=your_bitrix_client_id
BITRIX_CLIENT_SECRET=your_bitrix_client_secret

# Настройки DaData
DADATA_API_KEY=your_dadata_api_key
DADATA_SECRET_KEY=your_dadata_secret_key

# Включение Telegram webhook
ENABLE_TELEGRAM=true
# Разрешить работу Telegram webhook без секрета (НЕ рекомендуется для prod)
ENABLE_TELEGRAM_INSECURE=false
# Включение Bitrix24 обработчика
ENABLE_BITRIX=true
# Включение DaData
ENABLE_DADATA=true
# Количество результатов DaData
DADATA_COUNT=1

# Таймаут внешних запросов в секундах
HTTP_TIMEOUT_SECONDS=10

# Уровень логирования (info, warn, error)
LOG_LEVEL=info
