# Render worker configuration
APP_NAME=jurist-bot
APP_ENV=production
LOG_LEVEL=INFO
HTTP_TIMEOUT_SECONDS=15
MAX_REQUEST_BODY_BYTES=1048576
MAX_FILE_SIZE_MB=15
MEMORY_STORE_PATH=./data/memory_store.json
ENABLE_OCR=false

TELEGRAM_BOT_TOKEN=replace_with_bot_token
TELEGRAM_API_BASE=https://api.telegram.org
ALLOWED_CHAT_IDS=123456789,987654321

WORKER_AUTH_TOKEN=replace_with_worker_token
DADATA_TOKEN=replace_with_dadata_token
DADATA_SECRET=replace_with_dadata_secret

# Vercel webhook configuration
RENDER_WORKER_URL=https://your-render-service.onrender.com
WORKER_AUTH_TOKEN=replace_with_worker_token
TELEGRAM_WEBHOOK_SECRET=replace_with_optional_secret
