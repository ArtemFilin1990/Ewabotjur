# Telegram Bot Configuration
TELEGRAM_TOKEN=example
TELEGRAM_WEBHOOK_URL=https://your-domain.com/telegram/webhook

# LLM API Configuration (e.g., OpenAI, Anthropic, etc.)
LLM_API_KEY=your_llm_api_key_here
LLM_API_BASE_URL=https://api.openai.com/v1
LLM_MODEL=gpt-4
LLM_TIMEOUT=30000
LLM_MAX_RETRIES=3

# DaData Integration
DADATA_TOKEN=example
DADATA_SECRET_KEY=your_dadata_secret_key_here

# Database Configuration
DB_URL=mongodb://localhost:27017/ewabotjur
DB_POOL_MIN=2
DB_POOL_MAX=10

# Storage Configuration
STORAGE_TYPE=local
STORAGE_PATH=./storage
STORAGE_TTL_DAYS=30

# Session Management
SESSION_TTL_MINUTES=60
SESSION_MEMORY_MAX_SIZE=10000

# File Processing
MAX_FILE_SIZE_MB=20
ENABLE_OCR=false
OCR_LANGUAGE=rus+eng

# Security
JWT_SECRET=your_jwt_secret_here
ALLOWED_TELEGRAM_IDS=123456789,987654321

# Observability
LOG_LEVEL=info
ENABLE_METRICS=true
METRICS_PORT=9090

# Application (for future Telegram Bot web service)
# When the bot is implemented as a web service, these will configure the webhook server
ENVIRONMENT=development
PORT=3000
HOST=0.0.0.0
