# Common configuration
APP_NAME=jurist-worker
APP_ENV=production
LOG_LEVEL=INFO
HTTP_TIMEOUT_SECONDS=15
REQUEST_ID_HEADER=X-Request-Id

# Access control
ALLOWED_CHAT_IDS=123456789,987654321

# Telegram (Render worker)
TELEGRAM_BOT_TOKEN=replace_me
TELEGRAM_API_BASE_URL=https://api.telegram.org

# Worker auth (Vercel -> Render)
WORKER_AUTH_TOKEN=replace_me

# DaData
DADATA_TOKEN=replace_me
DADATA_SECRET=
DADATA_BASE_URL=https://suggestions.dadata.ru

# File processing
MAX_FILE_SIZE_MB=15
ENABLE_OCR=false

# Memory store
MEMORY_STORE_PATH=./storage/memory_store.json

# Vercel webhook
RENDER_WORKER_URL=https://your-render-worker.onrender.com
TELEGRAM_WEBHOOK_SECRET=optional_shared_secret
