# Shared
LOG_LEVEL=INFO
HTTP_TIMEOUT_SECONDS=15
MAX_REQUEST_BODY_BYTES=1048576
REQUEST_ID_HEADER=X-Request-Id

# Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
ALLOWED_CHAT_IDS=123456789,987654321
ENFORCE_TELEGRAM_WHITELIST=true
MAX_FILE_SIZE_MB=15

# DaData
DADATA_TOKEN=your_dadata_token
DADATA_SECRET=

# Worker security
WORKER_AUTH_TOKEN=replace_with_strong_token
MEMORY_STORE_PATH=./storage/memory.json

# Vercel webhook forwarder
RENDER_WORKER_URL=https://your-render-worker-url
TELEGRAM_WEBHOOK_SECRET=optional_shared_secret
